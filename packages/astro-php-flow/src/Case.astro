---
import php from "./php";

interface Case {
  of: string | string[];
  default?: never;
}

interface DefaultCase {
  default: true;
  of?: never;
}

export type Props = Case | DefaultCase;

const { of: _of, default: def } = Astro.props;

const ofs = Array.isArray(_of) ? _of : [_of];
const cases = def ? ["default:"] : ofs.map((o) => `case ${o}:`).join("\n");
---

{php`<?php ${cases} ?>`}
<slot />
{php`<?php break; ?>`}
