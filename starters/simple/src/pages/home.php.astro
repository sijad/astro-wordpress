---
import Layout from "../layouts/Layout.astro";
import { If, While, php } from "astro-php-flow";
import PostTime from "../components/PostTime.astro";
---

<Layout>
  <section>
    <ul>
      <If test="have_posts()">
        <While test="have_posts()">
          {php`<?php the_post() ?>`}
          <li>
            <a href={php`<?php echo get_permalink(); ?>`}>
              <If test="has_post_thumbnail()">
                {php`<?php the_post_thumbnail('full'); ?>`}
              </If>
              <h4 class="title">{php`<?php the_title(); ?>`}</h4>
              <p class="date">
                <PostTime />
              </p>
            </a>
          </li>
        </While>
      </If>
    </ul>
  </section>
</Layout>

<style>
  main {
    width: 960px;
  }
  ul {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    list-style-type: none;
    margin: 0;
    padding: 0;
  }
  ul li {
    width: calc(50% - 1rem);
  }
  ul li :global(*) {
    text-decoration: none;
    transition: 0.2s ease;
  }
  ul li:first-child {
    width: 100%;
    margin-bottom: 1rem;
    text-align: center;
  }
  ul li:first-child :global(img) {
    width: 100%;
  }
  ul li:first-child .title {
    font-size: 2.369rem;
  }
  ul li :global(img) {
    margin-bottom: 0.5rem;
    border-radius: 12px;
  }
  ul li a {
    display: block;
  }
  .title {
    margin: 0;
    color: rgb(var(--black));
    line-height: 1;
  }
  .date {
    margin: 0;
    color: rgb(var(--gray));
  }
  ul li a:hover h4,
  ul li a:hover .date {
    color: rgb(var(--accent));
  }
  ul a:hover :global(img) {
    box-shadow: var(--box-shadow);
  }
  @media (max-width: 720px) {
    ul {
      gap: 0.5em;
    }
    ul li {
      width: 100%;
      text-align: center;
    }
    ul li:first-child {
      margin-bottom: 0;
    }
    ul li:first-child .title {
      font-size: 1.563em;
    }
  }
</style>
